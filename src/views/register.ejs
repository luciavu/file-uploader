<form action="/register" method="post">
  <h1>Sign up</h1>
  <%- include("./partials/errors.ejs") %>
  <label for="username"
    >Enter Username: <input type="text" name="username" minlength="3" maxlength="15"
  /></label>

  <label for="password">
    Enter Password: <input type="password" name="password" minlength="3" maxlength="15"
  /></label>
  <label for="confirmpassword">
    Confirm Password: <input type="password" name="confirmpassword" minlength="3" maxlength="15"
  /></label>
  <button type="submit">Sign up</button>
</form>
